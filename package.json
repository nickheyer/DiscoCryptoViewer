{
  "name": "disco-crypto-viewer",
  "displayName": "Disco Crypto Viewer",
  "description": "View and inspect cryptographic files (X.509 certs, PKCS#12, CSRs, keys) directly in VS Code",
  "publisher": "NicholasHeyer",
  "repository": {
    "type": "git",
    "url": "https://github.com/nickheyer/DiscoCryptoViewer.git"
  },
  "icon": "DiscoCryptoIcon.png",
  "version": "0.0.2",
  "license": "MIT",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "discoCryptoViewer.cryptoView",
        "displayName": "Crypto File Viewer",
        "selector": [
          { "filenamePattern": "*.pem" },
          { "filenamePattern": "*.crt" },
          { "filenamePattern": "*.cer" },
          { "filenamePattern": "*.cert" },
          { "filenamePattern": "*.der" },
          { "filenamePattern": "*.key" },
          { "filenamePattern": "*.pub" },
          { "filenamePattern": "*.csr" },
          { "filenamePattern": "*.req" },
          { "filenamePattern": "*.crl" },
          { "filenamePattern": "*.p7b" },
          { "filenamePattern": "*.p7c" },
          { "filenamePattern": "*.p7s" },
          { "filenamePattern": "*.p12" },
          { "filenamePattern": "*.pfx" },
          { "filenamePattern": "*.gpg" },
          { "filenamePattern": "*.pgp" },
          { "filenamePattern": "*.asc" },
          { "filenamePattern": "*.jwk" },
          { "filenamePattern": "*.jwks" },
          { "filenamePattern": "*.jwt" },
          { "filenamePattern": "*.jws" },
          { "filenamePattern": "*.jwe" },
          { "filenamePattern": "*.srl" }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build:wasm && npm run build:webview && npm run package",
    "build:wasm": "bash wasm/build.sh",
    "build:webview": "cd webview && npm install && npm run build",
    "compile": "npm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.js --production",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.10.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.0",
    "@types/node": "20.x",
    "esbuild": "^0.21.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  }
}
