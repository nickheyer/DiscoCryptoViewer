{
  "name": "disco-crypto-viewer",
  "displayName": "Disco Crypto Viewer",
  "description": "View and inspect cryptographic files (X.509 certs, PKCS#12, CSRs, keys) directly in VS Code",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "discoCryptoViewer.certView",
        "displayName": "Crypto File Viewer",
        "selector": [
          { "filenamePattern": "*.pem" },
          { "filenamePattern": "*.crt" },
          { "filenamePattern": "*.cer" },
          { "filenamePattern": "*.cert" }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build:wasm && npm run build:webview && npm run package",
    "build:wasm": "bash wasm/build.sh",
    "build:webview": "cd webview && npm install && npm run build",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "esbuild": "^0.21.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
